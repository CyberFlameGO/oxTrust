{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "/",
    "title": "oxMemCache-Config",
    "type": "object",
    "additionalProperties": true,
    "properties": {
    "memcachedConfiguration":{
    	 "type":"object",
         "additionalProperties":false,
         "properties":{
		        "servers": {
		            "id": "servers",
		            "description": "server details separated by commas",
		            "title": "servers",
		            "type": "string",
		            "format": "url",
		            "minLength": 1
		        },
		        "maxOperationQueueLength": {
		            "id": "maxOperationQueueLength",
		            "description": "Maximum operation Queue Length.",
		            "type": "integer",
		            "multipleOf": 1,
		            "maximum": 2147483647,
		            "minimum": 1,
		            "exclusiveMaximum": false,
		            "exclusiveMinimum": false
		        },
		        "bufferSize": {
		            "id": "bufferSize",
		            "description": "Buffer Size.",
		            "type": "integer",
		            "multipleOf": 1,
		            "maximum": 2147483647,
		            "minimum": 1,
		            "exclusiveMaximum": false,
		            "exclusiveMinimum": false
		        },
		        "defaultPutExpiration": {
		            "id": "defaultPutExpiration",
		            "description": "Expiration timeout value",
		            "type": "integer",
		            "multipleOf": 1,
		            "maximum": 2147483647,
		            "minimum": 1,
		            "exclusiveMaximum": false,
		            "exclusiveMinimum": false
		        }
        	},
			    "required": [
			        "servers",
			        "maxOperationQueueLength",
			        "bufferSize",
			        "defaultPutExpiration"
			    ]
       },
      	"inMemoryConfiguration": {
      	 "type":"object",
         "additionalProperties":false,
         "properties":{
			      	"defaultPutExpiration" : {
						"id": "defaultPutExpiration",
			            "description": "defaultPutExpiration timeout value",
			            "type": "integer",
			            "multipleOf": 1,
			            "maximum": 2147483647,
			            "minimum": 1,
			            "exclusiveMaximum": false,
			            "exclusiveMinimum": false
			            }
           		}
		},
      	"cacheProviderType": {
            "id": "cacheProviderType",
            "description": "The cacheProvider Type.",
            "type": "string",
            "enum": [
                "IN_MEMORY",
                "MEMCACHED"
            ]
        }
    }
}
