{
    "$schema":"http://json-schema.org/draft-04/schema#",
    "id":"/",
    "title":"Import person configuration",
    "description": "Use this section to configure custom user attributes for import. Each item represents an attribute and its name in the database.",
    "type":"object",
    "properties":{
        "mappings":{
            "id":"mappings",
            "description": "List of attributes mappings for users import.",
            "type":"array",
            "minItems":0,
            "uniqueItems":false,
            "additionalItems":true,
            "items":{
                "type":"object",
                "additionalProperties":false,
                "properties":{
                    "displayName":{
                        "id":"displayName",
                        "type":"string",
                        "description": "The name of the custom attribute as defined in the Excel sheet."                   
                     },
                     "ldapName":{
                        "id":"ldapName",
                        "type":"string",
                        "description": "The attribute name in ldap.",
                        "minLength":1
                    },
                    "dataType":{
                        "id":"dataType",
                        "type":"string",
                        "enum":[
                            "string",
                            "numeric"
                        ]
                    },
                    "required":{
                        "id":"required",
                        "type":"boolean"
                    }
                }
            },
            "required": [
                "ldapName",
                "dataType",
                "required"
            ]
        }
    },
    "required":[

    ]
}